    script.
      // JavaScript-Code zum Hinzufügen der 'active'-Klasse basierend auf der aktuellen URL
      $(document).ready(function() {
        // Hole die aktuelle URL
        var currentURL = window.location.pathname;

        // Durchlaufe alle nav-items und setze 'active'-Klasse entsprechend der URL
        $('.navbar-nav a.nav-link').each(function() {
          var linkURL = $(this).attr('href');

          if (currentURL === linkURL) {
            $(this).addClass('active');
          } else {
            $(this).removeClass('active');
          }
        });
      });