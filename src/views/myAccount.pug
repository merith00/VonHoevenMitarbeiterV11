        .form-group.col-md-2
          label(for='email') Email
          input#email.form-control(type='text' value=MitarbeiterDaten[0].E_MAIL readonly='')

      h3 Adresse
      .form-row.h5
        .form-group.col-md-2
          label(for='ort') Ort
          input#ort.form-control(type='text' value=MitarbeiterDaten[0].ORT readonly='')
        .form-group.col-md-2
